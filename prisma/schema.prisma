generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TypePerson {
  id          Int      @id @default(autoincrement())
  description String?
  Person      Person[]
}

model Person {
  id       Int         @id @default(autoincrement())
  username String
  email    String      @unique
  phone    String
  typeId   Int
  fkType   TypePerson? @relation(fields: [typeId], references: [id])
}
